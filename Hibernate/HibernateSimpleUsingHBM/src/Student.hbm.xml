<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
<!-- doc tag gives all the HBM (Hibernate mapping) tab -->
<hibernate-mapping>
   <class name="model.Student" table="Student"><!-- What to map -->
      <id name="id" column="studId"><generator class="increment"/></id>
      <property name="name" column="name" type="string"/>
      <property name="Course" column="Course" type="string"></property>
      <property name="fee" column="fee" type="int"></property> 
   </class>
</hibernate-mapping>